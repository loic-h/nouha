extends ../layout.jade

block content
	div.form.-login
		div._header
			h4 Identifiez-vous
		div._content
			form(
				method='post'
				novalidate
			)
				div._input.-text.input
					input(
						type='email'
						name='email'
						placeholder='E-mail'
						value= email || ''
						autofocus
					)
				div._input.-text.input
					input(
						type='password'
						name='password'
						placeholder='Mot de passe'
						value= password || ''
					)
				div._input.-submit.input
					input(
						type='submit'
						value='Go'
					)
					if error
						p.error #{error}

