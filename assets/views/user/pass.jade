extends ../layout.jade

block content
	div.form.-pass
		div._header
			h4 Mot de passe oubli√©
		div._content
			form(
				method='post'
				novalidate
			)
				div._input.-text.input
					input(
						type='email'
						name='email'
						placeholder='E-mail'
						value= email || ''
						autofocus
					)
				div._input.-submit.input
					input(
						type='submit'
						value='Go'
					)
				if error
					p.error #{error}
